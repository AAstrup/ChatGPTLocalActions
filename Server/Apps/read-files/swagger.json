{
  "openapi": "3.1.0",
  "info": {
    "title": "ReadFiles API",
    "version": "1.0.0"
  },
  "paths": {
    "/readfiles": {
      "post": {
        "summary": "Processes a request to list directory contents and/or read file contents.",
        "operationId": "readFiles",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "DirectoryPathForListingFiles": {
                    "type": "string",
                    "nullable": true
                  },
                  "DirectoryListingMode": {
                    "type": "string",
                    "enum": ["TopDirectoryOnly", "AllDirectories"],
                    "default": "TopDirectoryOnly"
                  },
                  "FilePathsForContent": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "nullable": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ListedPaths": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "FullPath": { "type": "string" },
                          "FileExtension": { "type": "string", "nullable": true },
                          "IsFolder": { "type": "boolean" }
                        }
                      },
                      "nullable": true
                    },
                    "FileContents": {
                      "type": "object",
                      "additionalProperties": { "type": "string" },
                      "nullable": true
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
