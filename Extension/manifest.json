
{
  "manifest_version": 3,
  "name": "ChatGPT Local Action Extension",
  "version": "1.0",
  "description": "Processes ChatGPT responses to perform local actions.",
  "permissions": ["activeTab","webNavigation", "notifications", "scripting", "activeTab", "storage"],
  "host_permissions": ["http://localhost:8000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
